# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# C# files
[*.cs]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# C# solution files
[*.sln]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# C# project files
[*.{csproj,vcxproj,fsproj}]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
