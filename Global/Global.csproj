<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>OpenXMLOffice.Global</RootNamespace>
    <WeaverCosturaOutputInProjectFolder>true</WeaverCosturaOutputInProjectFolder>
    <CosturaOutputType>SingleFile</CosturaOutputType>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DocumentFormat.OpenXml" Version="3.0.0" />
    <PackageReference Include="DocumentFormat.OpenXml.Linq" Version="3.0.0" />
  </ItemGroup>
</Project>